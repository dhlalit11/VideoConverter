<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/accent"/>

            <size
                android:width="@dimen/library_item_selection_size"
                android:height="@dimen/library_item_selection_size"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="1.5dp"
                android:color="#ffffff"/>

            <size
                android:width="@dimen/library_item_selection_size"
                android:height="@dimen/library_item_selection_size"/>
        </shape>
    </item>
</layer-list>